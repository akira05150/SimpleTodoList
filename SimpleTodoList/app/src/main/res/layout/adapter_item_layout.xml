<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/mycard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/cardback"
        app:cardCornerRadius="14dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txv_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="17dp"
                android:text="看醫生"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/delete"
                tools:ignore="SpeakableTextPresentCheck" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="32.5dp"
                android:layout_marginTop="62.5dp"
                android:background="@color/background" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="82dp"
                android:scaleType="fitCenter"
                android:src="@drawable/description" />

            <TextView
                android:id="@+id/txv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="77dp"
                android:layout_marginTop="86dp"
                android:text="搭公車"
                android:textColor="@color/description"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toLeftOf="@id/txv_date"
                android:layout_alignBottom="@id/txv_date"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_description"
                android:layout_alignLeft="@id/txv_description"
                android:layout_marginTop="16dp"
                android:text="2021/02/14~2021/02/25"
                android:textColor="@color/date"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@id/txv_date"
                android:layout_alignBottom="@id/txv_location"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@id/txv_location"
                android:scaleType="fitCenter"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/txv_location"
                android:layout_below="@id/txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/txv_description"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:text="25.0174719, 121.3662922"
                android:textColor="@color/location"
                android:textSize="20sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>